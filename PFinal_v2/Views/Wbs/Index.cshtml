@model IEnumerable<PFinal_v2.Models.Wbs>

@{
    ViewData["Title"] = "Index";
}

<h2 style="margin-bottom: 40px;">WBS cadastradas</h1>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@

<form asp-controller="Wbs" asp-action="Index">
    <p>
            <input type="text" name="SearchString" placeholder="Código ou descrição" class="custom-search-input" /> 
            <input type="submit" value="Filter" class="custom-filter-button" />
    </p>
</form>

    <table class="table custom-table" style="margin-top: 40px;">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Código</th>
            <th scope="col">Descrição</th>
            <th scope="col">Chargeability</th>
            <th></th>
        </tr>
    </thead>
    <tbody> 
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.WbsId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsChargeable)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.WbsId"><i class="bi bi-pencil custom-white-icon"></i></a> |
                        <a asp-action="Details" asp-route-id="@item.WbsId"><i class="bi bi-search custom-white-icon"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.WbsId"><i class="bi bi-trash custom-white-icon"></i></a>
                   
            </td>
        </tr>
}
    </tbody>
</table>

    <a href="@Url.Action("Index", "Admin")" class="custom-filter-button" style="margin-bottom: 40px;">Voltar</a>

