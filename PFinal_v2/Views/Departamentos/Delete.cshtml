@model PFinal_v2.Models.Departamento

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Deseja realmente excluir departamento?</h3>
<div>
    <h4>Departamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
